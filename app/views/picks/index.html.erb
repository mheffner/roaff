<h1>Listing picks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Round</th>
      <th>Team</th>
      <th>Player</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @picks.each do |pick| %>
    <tr>
        <td><%= pick.round %></td>
        <td><%= pick.team.name %></td>
        <td><%= pick.player.name_and_position %></td>
        <td><%= link_to 'Edit', edit_pick_path(pick) %></td>
        <td><%= link_to 'Destroy', pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
